{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": [
        "./src"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/assets": [
        "./src/assets"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/pages": [
        "./src/pages"
      ],
      "@/types": [
        "./src/types"
      ],
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}